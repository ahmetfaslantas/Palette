{
  "name": "palette",
  "version": "1.0.0",
  "description": "A simple LMS built with the MERN stack.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmetfaslantas/palette.git"
  },
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
