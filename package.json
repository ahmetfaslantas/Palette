{
  "name": "palette",
  "version": "1.0.0",
  "description": "A simple LMS built with the MERN stack.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmetfaslantas/palette.git"
  },
  "main": "src/index.js",
  "scripts": {
    "lint": "concurrently \"eslint . --ext .js,.jsx\" \"cd client && npm run lint\"",
    "lint:fix": "eslint . --ext .js,.jsx --fix && cd client && npm run lint:fix",
    "start": "node src/index.js",
    "start-watch": "nodemon src/index.js",
    "dev": "concurrently \"npm run start-watch\" \"cd client && npm start\"",
    "clean": "rm -rf node_modules coverage logs files",
    "test:unit": "jest ./tests/ --forceExit --coverage --runInBand",
    "cypress": "cd client && npm run test",
    "cypress:interactive": "cd client && npm run test:interactive",
    "test:e2e": "start-server-and-test dev http-get://localhost:8081 cypress",
    "test:e2e:interactive": "start-server-and-test dev http-get://localhost:8081 cypress:interactive"
  },
  "keywords": [
    "LMS"
  ],
  "author": {
    "name": "Ahmet Faruk ASLANTAÅž",
    "url": "https://github.com/ahmetfaslantas/"
  },
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.4",
    "multer": "^1.4.4",
    "nanoid": "^3.3.3",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^8.10.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "start-server-and-test": "^1.14.0",
    "supertest": "^6.2.2"
  }
}
